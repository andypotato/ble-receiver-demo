#!/usr/bin/env node

const program = require('commander');
program
  .option('-u, --uuid <uuid>', 'specifies the service UUID', 'F0BA')
  .option('-p, --port <port>', 'set the controller port', 0)

// get command line params
const uuid = program.uuid;
const port = program.port;

console.log('Starting Controller Client');
console.log('UUID:', uuid);
console.log('Port:', port);

// create client instance
const ControllerClient = require('../lib/ControllerClient');
const cc = new ControllerClient(uuid, port);

// init & go
cc.init();

